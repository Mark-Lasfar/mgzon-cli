{
  "name": "mgzon-gui",
  "version": "2.0.8",
  "description": "MGZON GUI - Graphical User Interface for MGZON CLI",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"npm run build -- --watch\" \"npm run start\"",
    "start": "electron dist/main.js",
    "package": "npm run build && npm run convert-icons && electron-builder",
    "package:linux": "npm run build && npm run convert-icons && electron-builder --linux",
    "package:mac": "npm run build && npm run convert-icons && electron-builder --mac --config.mac.identity=null",
    "package:win": "npm run build && npm run convert-icons && electron-builder --win --config.win.certificateSubjectName=null",
    "convert-icons": "node convert-icons.js",
    "clean": "rm -rf dist build",
    "prebuild": "test -f ../bin/mgzon || (echo 'CLI not built!' && exit 1)"
  },
  "build": {
    "appId": "com.mgzon.gui",
    "productName": "MGZON GUI",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "src/renderer/**/*",
      "build/icons/**/*",
      "../bin/mgzon*"
    ],
    "extraFiles": [
      "../bin/mgzon-linux",
      "../bin/mgzon-macos",
      "../bin/mgzon-win.exe"
    ],
    "icon": "build/icons/icon_512x512.png",
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon_512x512.png",
      "identity": null,
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icons/icon_256x256.png",
      "certificateSubjectName": null
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon_512x512.png",
      "category": "Utility"
    },
    "publish": null,
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false
  },
  "author": "MGZON Team <dev@mgzon.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mark-Lasfar/mgzon-cli.git",
    "directory": "gui"
  },
  "bugs": {
    "url": "https://github.com/Mark-Lasfar/mgzon-cli/issues"
  },
  "homepage": "https://github.com/Mark-Lasfar/mgzon-cli#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "concurrently": "^8.2.0",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.2",
    "sharp": "^0.34.5",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "axios": "^0.27.0",
    "chalk": "^4.1.2"
  }
}